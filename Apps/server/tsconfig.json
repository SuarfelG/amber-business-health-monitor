{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@amber/core": ["../../Packages/core/src"],
      "@amber/core/*": ["../../Packages/core/src/*"]
    }
  },
  "include": ["src/**/*", "../../Packages/core/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
