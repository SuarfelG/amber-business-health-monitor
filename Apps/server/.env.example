# Database
DATABASE_URL="postgresql://user:password@localhost:5432/business_health_monitor"

# Environment
NODE_ENV="development"
SERVER_PORT=3001
FRONTEND_URL="http://localhost:3000"

# JWT
JWT_SECRET="your-secret-key-change-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Encryption (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-64-character-hex-key-here"

# Stripe OAuth
# Get these from: https://dashboard.stripe.com/settings/applications/overview
# 1. Create a Stripe Connect app in Settings > Connected applications
# 2. Use Platform settings > OAuth credentials
STRIPE_CLIENT_ID="ca_your_client_id_here"
STRIPE_CLIENT_SECRET="sk_test_your_secret_here"
STRIPE_WEBHOOK_SECRET="whsec_test_your_webhook_secret_here"

# GoHighLevel OAuth
# Get these from: https://system.gohighlevel.com/marketplace
# 1. Create a custom integration in Marketplace > Integrations
# 2. Use OAuth credentials from integration settings
GHL_CLIENT_ID="your_ghl_client_id_here"
GHL_CLIENT_SECRET="your_ghl_client_secret_here"
GHL_WEBHOOK_SECRET="your_ghl_webhook_secret_here"
